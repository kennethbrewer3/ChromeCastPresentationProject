<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mobileappscompany.training.chromecastpresentationproject"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="21" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_cast_googblue_48dp"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat" >
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name="com.mobileappscompany.training.chromecastpresentationproject.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.mobileappscompany.training.chromecastpresentationproject.TextSendReceiveActivity"
            android:label="@string/title_activity_text_send_receive" >
        </activity>
        <activity
            android:name="com.mobileappscompany.training.chromecastpresentationproject.CastVideoActivity"
            android:label="@string/title_activity_cast_video" >
        </activity>
        <activity
            android:name="com.mobileappscompany.training.chromecastpresentationproject.CastMP3Activity"
            android:label="@string/title_activity_cast_mp3" >
        </activity>
    </application>

</manifest>