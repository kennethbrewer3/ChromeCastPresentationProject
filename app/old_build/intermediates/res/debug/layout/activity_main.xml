<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:orientation="vertical"
    >

    <Button
        android:id="@+id/buttonToTextSendReceiveActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/string_to_text_send_receive_activity"
        />

    <Button
        android:id="@+id/buttonToCastVideoActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/string_to_video_activity"
        />

    <Button
        android:id="@+id/buttonToCastMP3Activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/string_to_cast_mp3_activity"
        />


    <Button
        android:id="@+id/buttonToExitApp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/string_to_exit_app"
        />
</LinearLayout>
